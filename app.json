{
  "name": "YT Audio API",
  "description": "A FastAPI-based API for YouTube audio and video streaming and downloading",
  "keywords": [
    "python",
    "fastapi",
    "youtube",
    "audio",
    "video",
    "streaming",
    "download"
  ],
  "env": {
    "API_KEY": {
      "description": "The API key for securing endpoints (default: BadApiYt)",
      "value": "BadApiYt",
      "required": false
    },
    "MONGO_URI": {
      "description": "MongoDB connection string for storing audio IDs and statistics",
      "value": "mongodb+srv://BADMUNDA:BADMYDAD@badhacker.i5nw9na.mongodb.net/",
      "required": false
    },
    "UPSTREAM_REPO": {
      "description": "If you dont know this, Leave as it is",
      "value": "https://github.com/IamElite/YAPI",
      "required": true
    },
    "UPSTREAM_BRANCH": {
      "description": "Upstream Repo's Branch Name",
      "value": "main",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    }
  ],
  "stack": "container",
  "formation": {
    "worker": {
      "quantity": "1",
      "size": "Standard-2X"
    }
  }
}
